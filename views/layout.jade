!!! 5
html(lang="en")
  head
    meta(charset="utf-8")
    title #{title ? title + " - " : ""}Sean's Blog
    meta(name="description", content="C/C++, JavaScript, Python, Internet, electromusic, bartending, etc.")
    meta(name="viewport", content="width=device-width")
    link(href="#{urlPrefix}/style.css", rel="stylesheet")
    link(href="#{urlPrefix}/print.css", rel="stylesheet", media="print")

    link(href="#{urlPrefix}/shCore.css", rel="stylesheet", type="text/css")
    link(href="#{urlPrefix}/shThemeMidnight.css", rel="stylesheet", type="text/css")
    script(src="#{urlPrefix}/shCore.js", type="text/javascript")
    script(src="#{urlPrefix}/shBrushJScript.js", type="text/javascript")
    script(src="#{urlPrefix}/shBrushCpp.js", type="text/javascript")
    script(src="#{urlPrefix}/shBrushBash.js", type="text/javascript")
    script(src="#{urlPrefix}/shBrushPython.js", type="text/javascript")
    script(src="#{urlPrefix}/shBrushXml.js", type="text/javascript")
    script(src="#{urlPrefix}/shBrushPlain.js", type="text/javascript")
    script
      SyntaxHighlighter.config.tagName = 'code';
      SyntaxHighlighter.all();

    //- link(rel="alternate", type="application/rss+xml", title="RSS 2.0", href="/blog/feed.xml")
    link(href="#{urlPrefix}/favicon.ico", rel="icon", type="image/x-icon")
    script
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-34437927-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  body
    #container
      #header
        a(href="#{urlPrefix}/")
          h1 Sean's Blog
        ul
          each category in categories
            li
              a(href="#{urlPrefix}/#{category[0]}/") #{category[0]}(#{category[1]})

        //- .tagline C/C++, JavaScript, Python, Internet, electromusic, bartending, etc.

      block content

      #sidebar
        block sidebar

        .aside
          h4 Links
          p My book: 
            a(href="http://songjinshan.com/akabook/") Learning Linux C/C++ Programming from Scratch

          h4 Subscription
          p Please enter your email to subscribe to 
            a(href="http://groups.google.com/group/learning-linux-c-cpp") learning-linux-c-cpp mailing list:
          form(action="http://groups.google.com/group/learning-linux-c-cpp/boxsubscribe")
            input(type="text", name="email")
            input(type="submit", name="sub", value="Subscribe")
          p And thanks for your generous donation!<br>
            img(src="/blog/me.alipay.png", alt="Donate", title="")

          h4 Follow Me on Sina Weibo
          iframe(width="100%", height="550", frameborder="0", scrolling="no", src="http://widget.weibo.com/weiboshow/index.php?language=zh_cn&amp;width=0&amp;height=550&amp;fansRow=2&amp;ptype=1&amp;speed=0&amp;skin=1&amp;isTitle=0&amp;noborder=0&amp;isWeibo=1&amp;isFans=0&amp;uid=2093223474&amp;verifier=00cb6534&amp;dpc=1")
      
      #footer
        p Powered by node.js #{process.version}
